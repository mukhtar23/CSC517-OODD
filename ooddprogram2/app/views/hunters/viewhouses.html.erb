<p id="notice"><%= notice %></p>
<h1>Houses</h1>
<table>
  <thead>
  <tr>
    <th>Location</th>
    <th>Square ft</th>
    <th>Year built</th>
    <th>Style</th>
    <th>Price</th>
    <th>Floor</th>
    <th>Basement</th>
    <th>Owner</th>
    <th>Contact info</th>
    <th>Realtor</th>
    <th>Company</th>
    <th>Pic link</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @houses.each do |house| %>
    <tr>
      <td><%= house.location %></td>
      <td><%= house.square_ft %></td>
      <td><%= house.year_built %></td>
      <td><%= house.style %></td>
      <td><%= house.price %></td>
      <td><%= house.floor %></td>
      <td><%= house.basement %></td>
      <td><%= house.owner %></td>
      <td><%= house.contact_info %></td>
      <td><%= house.realtor_id %></td>
      <td><%= house.company_id %></td>
      <td><%= link_to 'View Pictures', "/hunters/#{current_user.hunter.id}/showhousepic/#{house.id}" %></td>
      <td><%= link_to 'Show', house %></td>
      <td><%=link_to 'Have an Inquiry?', new_inquiry_path(:house_id => house.id, :hunter_id => current_user.hunter.id)%>
       <td><%=link_to 'Add to interest list',"/interests/create_from_hunter/#{current_user.hunter.id}/#{house.id}"%></td>
        %>
        </tr>
      </tbody>
  <%end %>
  </table>

<br>
<%if logged_in_hunter?(@hunter) %>
  <%= link_to 'Back to Hunter Home Page', home_hunter_path(current_user.hunter) %>
<% elsif logged_in_admin? %>
  <%= link_to 'Back to Admin Home Page', show_user_path(current_user) %>
<%end %>

<br>
<% if logged_in? %>
  <%= link_to "Log out", logout_path, method: :delete %>
<% end %>
