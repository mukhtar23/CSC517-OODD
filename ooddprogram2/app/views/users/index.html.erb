<p id="notice"><%= notice %></p>

<h1>Users</h1>
<p>
  Contact method Key: 0 - email, 1 - Phone, 2 - Text
</p>
<p>
  Role Key: 1 - Admin, 2 - Realtor, 3 - House Hunter
</p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Phone</th>
      <th>Contact method</th>
      <th>Role</th>
<!--      <th>Curr role</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <% if logged_in? %>
            <% if current_user.role ==1 %>

            <%else %>
              <%= user.password %>

        <% end %>
          <% end %>
          <%#= user.password %>


        </td>
        <td><%= user.phone %></td>
        <td><%= user.contact_method %></td>
        <td><%= user.role %></td>
<!--        <td><%#= user.curr_role %></td>-->
<!--        <td><%#= link_to 'Show', user %></td>-->
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <%# if user.role != 1 %>
<!--          <td><%#= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        <%# end %>

        <% if user.realtor.nil? && user.hunter.nil? %>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

