<p id="notice"><%= notice %></p>

<h1>Houses</h1>

<p>
  House style Key: 0 - single family home, 1 - apartment, 2 - condo
</p>
<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Square ft</th>
      <th>Year built</th>
      <th>Style</th>
      <th>Price</th>
      <th>Floor</th>
      <th>Basement</th>
      <th>Owner</th>
      <th>Contact info</th>
      <th>Realtor</th>
      <th>Company</th>
      <th>Pic link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.location %></td>
        <td><%= house.square_ft %></td>
        <td><%= house.year_built %></td>
        <td><%= house.style %></td>
        <td><%= house.price %></td>
        <td><%= house.floor %></td>
        <td><%= house.basement %></td>
        <td><%= house.owner %></td>
        <td><%= house.contact_info %></td>
        <td><%= house.realtor.user.name %></td>
        <td><%= house.company.name %></td>
        <td><%= link_to 'View Pictures', "/hunters/#{current_user.hunter.id}/showhousepic/#{house.id}" %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

  </tbody>
        <%end %>
</table>

<br>


  <br>
<% if logged_in? %>
  <% if logged_in_admin? %>
    <%= link_to 'New House', new_house_path %>
    <br>
    <br>
    <%= link_to "Back to Admin Page", current_user%>

    <br>
    <br>
    <%= link_to "Log out", logout_path, method: :delete %>
    <%else %>

    <br>
  <% end %>
<% end %>
